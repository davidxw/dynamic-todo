# Dynamic Todo Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: GitHub Copilot SDK
# =============================================================================

# GitHub Personal Access Token with 'copilot' scope
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_personal_access_token_here

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================

# Development server port (default: 3000)
PORT=3000

# Node environment (development | production | test)
NODE_ENV=development

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================

# Enable debug logging for MCP tool calls
DEBUG_MCP=false

# Enable verbose AI reasoning display
DEBUG_REASONING=false
